<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activities"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_top_menu" >

        <!-- 返回按钮 -->

        <ImageView
        android:id="@+id/return_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_transparent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_backarrow" />
        
        <!-- 标题文字 -->

        <TextView
            android:id="@+id/title_text_tv"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="标题文字" />

    </RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activities"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="頭像"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/account_avatar_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_account_avatar" />
    </LinearLayout>

    
     <LinearLayout
        android:id="@+id/modify_name_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
			android:gravity="right"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="18sp" />
    </LinearLayout>

     
     
     
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="賬號"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/email_tv"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
			android:gravity="right"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="18sp" />
    </LinearLayout>    
    
     
     
    <LinearLayout
        android:id="@+id/modify_password_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="修改密碼"
            android:textColor="@color/black"
            android:textSize="18sp" />

       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/details_large"
           android:scaleType="centerInside"/>
    </LinearLayout>
     
</LinearLayout>
</LinearLayout>