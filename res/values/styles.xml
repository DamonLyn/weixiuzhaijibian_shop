	        <item name="android:background">@drawable/selector_transparent_item_effect_1</item>
	    </style>
	    <style name="display_accepted_order_rl">
	        <item name="android:background">@drawable/selector_transparent_item_effect_2</item>
	    </style>
	    <style name="display_system_message_rl">
